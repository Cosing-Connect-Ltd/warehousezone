@model Ganedata.Core.Entities.Domain.OrderProcess
@{

    Layout = null;
}

<div>

    <div class="card">
        <div class="card-body">
            @Html.HiddenFor(model => model.OrderProcessID)
           @if (ViewBag.DeliveryEdit != null && (bool)ViewBag.DeliveryEdit)
           {
            <div id="delivery">
                <div class="input-group h-100 justify-content-center align-items-center">
                    @Html.LabelFor(model => model.DateCreated, htmlAttributes: new { @class = "col-md-4" })
                  
                        @Html.DevExpress().DateEditFor(m => m.DateCreated,
                                    settings =>
                                    {
                                        settings.Name = "EditDateCreated";
                                        settings.Properties.DisplayFormatString = "dd/MM/yyyy";
                                        settings.Properties.ClientSideEvents.GotFocus = "function(s, e) { s.ShowDropDown(); }";
                                        settings.Width = System.Web.UI.WebControls.Unit.Percentage(100);
                                        settings.ControlStyle.CssClass = "form-control col-md-8";
                                    }
                                    ).GetHtml()

                        @Html.ValidationMessageFor(model => model.DateCreated)
                    
                </div>
                <div class="input-group h-100 justify-content-center align-items-center">
                    @Html.LabelFor(model => model.DeliveryNO, htmlAttributes: new { @class = "col-md-4" })
                    @Html.EditorFor(model => model.DeliveryNO, new { htmlattributes = new { @class = " form-control col-md-8" } })
                </div>

            </div>
           }
           else
           {
            <div id="addresssection">
                <div class="input-group h-100 justify-content-center align-items-center">
                    @Html.LabelFor(model => model.ShipmentAddressLine1, htmlAttributes: new { @class = "col-md-4" })
                    @Html.EditorFor(model => model.ShipmentAddressLine1, new { htmlattributes = new { @class = " form-control col-md-8" } })

                </div>
                <div class="input-group h-100 justify-content-center align-items-center">
                    @Html.LabelFor(model => model.ShipmentAddressLine2, htmlAttributes: new { @class = "col-md-4" })
                    @Html.EditorFor(model => model.ShipmentAddressLine2, new { htmlattributes = new { @class = " form-control col-md-8" } })
                </div>
                <div class="input-group h-100 justify-content-center align-items-center">
                    @Html.LabelFor(model => model.ShipmentAddressLine3, htmlAttributes: new { @class = "col-md-4" })
                    @Html.EditorFor(model => model.ShipmentAddressLine3, new { htmlattributes = new { @class = " form-control col-md-8" } })
                </div>
                <div class="input-group h-100 justify-content-center align-items-center">
                    @Html.LabelFor(model => model.ShipmentAddressTown, htmlAttributes: new { @class = "col-md-4" })
                    @Html.EditorFor(model => model.ShipmentAddressTown, new { htmlattributes = new { @class = " form-control col-md-8" } })
                </div>
                <div class="input-group h-100 justify-content-center align-items-center">
                    @Html.LabelFor(model => model.ShipmentAddressPostcode, htmlAttributes: new { @class = "col-md-4" })
                    @Html.EditorFor(model => model.ShipmentAddressPostcode, new { htmlattributes = new { @class = " form-control col-md-8" } })
                </div>
            </div>
           }
        </div>
        <div class="card-footer">
            <div class="col-md-12">
                <input type="button" value="Cancel" class="btn btn-default btn-submit120px pull-right" onclick="ModelEditDelivery.Hide();" />
                <input type="button" value="Save" class="btn btn-primary btn-submit120px pull-right" onclick="UpdateDeliveryAddress();" />

            </div>

            <div class="clearfix"></div>
        </div>
        <div class="clearfix"></div>
    </div>

</div>
