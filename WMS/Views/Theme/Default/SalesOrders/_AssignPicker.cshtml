@using Ganedata.Core.Entities.Helpers
@section scripts {



    @Html.DevExpress().GetStyleSheets(
            new StyleSheet { ExtensionType = ExtensionType.PopupControl, Theme = GaneStaticAppExtensions.DevexTheme },
            new StyleSheet { ExtensionType = ExtensionType.PopupMenu, Theme = GaneStaticAppExtensions.DevexTheme }
            )

    @Html.DevExpress().GetScripts(
            new Script { ExtensionType = ExtensionType.PopupControl },
            new Script { ExtensionType = ExtensionType.PopupMenu }
            )
}
@{
    Layout = null;
}
<h2><span>Choose Picker</span></h2>
@using (Html.BeginForm("", "", FormMethod.Post))
{

    @Html.Hidden("OrderId", (int)ViewBag.OrderIds)
    <div class="input-group h-100 justify-content-center align-items-center">
        @Html.Label("Choose Picker", htmlAttributes: new { @class = "col-md-4" })
        <div class="col-md-8">
            @Html.DropDownList("AssignPicker", ViewBag.Picker as SelectList, "Select Picker", new { @class = "chosen-select form-control" })

        </div>
    </div>
    <div class="clearfix"></div>

    <div class="col-md-offset-2 col-md-10 bottom-right-popup">
        <input type="button" value="Save" class="btn btn-primary btn-submit120px pull-right" onclick="SavePicker();" />
        <input type="button" value="Cancel" class="btn btn-default btn-submit120px pull-right" onclick="AssignPickerPopUp.Hide();" />
    </div>
}
