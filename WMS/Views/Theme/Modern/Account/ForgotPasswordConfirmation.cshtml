@{
    ViewData["Title"] = "Forgot password confirmation";
    ViewData["AppClass"] = "app-full-height app-without-header app-full-width";
    ViewData["AppWithoutHeader"] = true;
    ViewData["AppWithoutSidebar"] = true;
    ViewData["AppWithoutContainer"] = true;
}

<!-- BEGIN login -->
<div class="login">
    <!-- BEGIN login-content -->
    <div class="login-content">
        <h1 class="">@ViewData["Title"]</h1>
        
        <p>
            Please check your email to reset your password.
        </p>
        <div class="text-center text-muted">
            Back to <a asp-controller="Account" asp-action="Login">Login</a> screen.
        </div>
    </div>
    <!-- END login-content -->
</div>
<!-- END login -->
