@model  Ganedata.Core.Models.ResetPasswordViewModel
@{
    var isConfirmAcc = ViewData["IsConfirmEmailRequest"] != null;
    ViewData["Title"] = isConfirmAcc ? "Account confirmation" : "Reset password";
}

<!-- BEGIN login -->
<div class="login">
    <!-- BEGIN login-content -->
    <div class="login-content">        
        <h2>@ViewData["Title"]</h2>
        @if (isConfirmAcc)
        {
            <div class="alert alert-success col-12 h5 text-center">You account has been confirmed</div>
        }
        <form action="@(isConfirmAcc?"ConfirmPassword":"ResetPassword")" method="POST" returnurl="@ViewData["ReturnUrl"]" name="confirmpwd_form" autocomplete="off" role="form" class="bg-angle">
            @if (isConfirmAcc)
            {
                <div class="section-subtitle">Set your account password.</div>
            }

            @Html.AntiForgeryToken()

            <input asp-for="Code" type="hidden" />

            <div class="form-group">
                @if (isConfirmAcc)
                {
                    <label>Email :</label>
                    <label class="font-weight-bold fs-18px">@Model.Email</label>
                    <input asp-for="Email" type="hidden" />
                }
                else
                {
                    <label asp-for="Email">Email Address <span class="text-danger">*</span></label>
                    <input asp-for="Email" class="form-control form-control-lg fs-15px" , placeholder="username@address.com" />
                    <span asp-validation-for="Email" class="badge-danger badge"></span>
                }
            </div>
            <div class="form-group">
                <label asp-for="Password">Password <span class="text-danger">*</span></label>
                <input asp-for="Password" class="form-control form-control-lg fs-15px" value="" name="Password" />
                <span asp-validation-for="Password" class="badge-danger badge"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword">Confirm Password <span class="text-danger">*</span></label>
                <input asp-for="ConfirmPassword" class="form-control form-control-lg fs-15px" value="" name="ConfirmPassword" />
                <span asp-validation-for="ConfirmPassword" class="badge-danger badge"></span>
            </div>
            <button type="submit" class="btn btn-login btn-lg btn-block fw-500 mb-3 mt-5">Confirm</button>
        </form>
    </div>
    <!-- END login-content -->
</div>
<!-- END login -->
 