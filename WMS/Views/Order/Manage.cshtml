@model Ganedata.Core.Entities.Domain.Order

@{
    ViewBag.Title = "ManagePO";
}

<h2><span>ManagePO</span></h2>

<div class="row">
    <ul class="nav nav-tabs">
        <li id="t1"><a href="#">PO</a></li>
        <li id="t2"><a href="#">Product Details</a></li>
        <li id="t3" class="active"><a href="#">Manage</a></li>
    </ul>
    <br />
</div>

<div class="content">
    <br /><br />
    <div class="row">
        <div class="col-md-6">

            @if (ViewBag.Updated != null)
            {
                <p style="color:red"> @ViewBag.Updated</p>
            }

            @using (Html.BeginForm("UpdatePO", "PO"))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.OrderID
           )
                <br />
                <table class="table tdclear">
                    <caption>
                        @Html.ValidationSummary(true)
                    </caption>
                    <tr>
                        <td>&nbsp;</td>
                        <td>@Html.Label("POStatus")</td>
                        <td>
                            @Html.DropDownList("POStatusID", null, "Select ....", new { @class = "chosen-select" })
                        </td>
                        <td>
                            <input type="submit" value="Update Status" class="btn btn-primary" style="width:120px;" />
                        </td>
                        <td></td>
                    </tr>
                </table>
            }
            <br /> <br />

            <div class="row">
                <div class="col-md-offset-4">
                    @Html.ActionLink("PO Progress", "POProgress", "PO", new { id = Model.OrderID }, new { @class = "btn btn-primary popup", target = "_blank" })
                    @Html.ActionLink("Print PO", "PrintPO", "PO", new { id = Model.OrderID }, new { @class = "btn btn-primary popup", target = "_blank" })
                    @Html.ActionLink("Cancel PO", "CancelPO", "PO", new { id = Model.OrderID }, new { @class = "btn btn-primary c" })
                    @Html.ActionLink("Send Email", "EmailSupplier", "PO", new { id = Model.OrderID }, new { @class = "btn btn-primary " })
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <br />
    @Html.ActionLink("Back to List", "Index")
</div>
<div>
    <script type="text/javascript">
    $(function(){
        $('.popup').click(function (e) {
           window.open($(this).attr('href'), "_blank", "toolbar=yes, scrollbars=yes, resizable=yes, top=20, width=800, height=600");
           e.preventDefault();
        });

        if ($('#POStatusID').val() == 3)
            $('.c').hide();
    });
    </script>
</div>