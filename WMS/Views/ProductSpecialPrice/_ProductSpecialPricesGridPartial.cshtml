@Html.DevExpress().GridView(
    settings =>
    {
        settings.Name = "gridviewProductSpecialPrices";
        settings.CallbackRouteValues = new { Controller = "ProductSpecialPrice", Action = "_ProductSpecialPricesGrid" };
        settings.Width = System.Web.UI.WebControls.Unit.Percentage(100);
        //header filter
        settings.SettingsPager.Visible = true;
        settings.Settings.ShowGroupPanel = false;
        settings.Settings.ShowFilterRow = true;
        settings.Settings.ShowHeaderFilterButton = false;
        settings.SettingsBehavior.AllowFocusedRow = true;

        settings.KeyFieldName = "PriceGroupDetailID";
        settings.Columns.Add("PriceGroupDetailID", "#ID").Width = System.Web.UI.WebControls.Unit.Pixel(50);
        settings.Columns.Add("PriceGroupName").Width = System.Web.UI.WebControls.Unit.Percentage(30);
        settings.Columns.Add("ProductName").Width = System.Web.UI.WebControls.Unit.Percentage(30);
        settings.Columns.Add("SpecialPrice", "SpecialPrice").Width = System.Web.UI.WebControls.Unit.Pixel(120);
        settings.Columns.Add("StartDate").Width = System.Web.UI.WebControls.Unit.Pixel(125);
        settings.Columns.Add("EndDate").Width = System.Web.UI.WebControls.Unit.Pixel(125);
        settings.Columns.Add("DateCreated").Width = System.Web.UI.WebControls.Unit.Pixel(125);
        settings.ClientSideEvents.FocusedRowChanged = "OnGridFocusedRowChanged";

        settings.CustomBindingRouteValuesCollection.Add(
            GridViewOperationType.Paging,
            new { Controller = "ProductSpecialPrice", Action = "_SpecialPriceListPaging", gvName = settings.Name }
            );

        settings.CustomBindingRouteValuesCollection.Add(
            GridViewOperationType.Filtering,
            new { Controller = "ProductSpecialPrice", Action = "_SpecialPriceListFiltering", gvName = settings.Name }
            );

        settings.CustomBindingRouteValuesCollection.Add(
            GridViewOperationType.Sorting,
            new { Controller = "ProductSpecialPrice", Action = "_SpecialPriceDataSorting", gvName = settings.Name }
            );

    }).BindToCustomData(Model).GetHtml()
