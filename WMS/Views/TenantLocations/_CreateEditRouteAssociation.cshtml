@model Ganedata.Core.Entities.Domain.TenantLocationToRouteAssociateViewModel


@{
    ViewBag.Title = "Market - Route Associations";
}
 
<div class="row">
    
        <h2>Market - Route Associations</h2>
        <form class="form-horizontal" action="/Markets/SaveMarketCustomers" method="post" id="frmMarketAssociation">
            @Html.AntiForgeryToken()
            @Html.HiddenFor(c => c.TenantLocationId)
            <div class="form-group row">
                <div class="col-sm-7">
                    @Html.ValidationSummary()
                </div>
            </div>
         
            @if (Model.Markets != null && Model.Markets.Any() && Model.IsMobileLocation)
            {
                <div class="form-group">
                    @Html.Label("Select Market", new {@class = "col-sm-3 control-label"})
                    <div class="col-sm-9">
                        @Html.DropDownListFor(c => c.MarketId, new SelectList(Model.Markets, "Id", "Name"), new {@class = "chosen-select"})
                    </div>
                </div>
                <div style="display: none" id="marketRoutes">
                <div class="form-group" >
                    @Html.Label("Select Route", new {@class = "col-sm-3 control-label"})
                    <div class="col-sm-9">
                        @Html.DropDownListFor(c => c.MarketRouteId, new SelectList(Model.MarketRoutes, "Id", "Name"))
                    </div>
                   
                </div>
                <div class="form-group" id="divMarketAssociationMessage" style="display: none">
                    <div class="alert alert-success"> Associations updated...</div> 
                </div>
                <div class="clearfix"></div>
                  
            <div class="col-md-offset-2 col-md-10  popup-bottom-right">
                <input type="button" class="btn btn-primary" id="saveBtn_MarketRouteAssociation" value="Save" />
                <a class="btn btn-default" href="javascript:ModelMarketRouteAssociation.Hide()">Close</a>
            </div>
                </div>
            }
            else
            {
                <div class="col-sm-12 alert alert-danger">
                    No markets configured as Mobile location. Manage markets @Html.ActionLink("here.", "Index","Markets")
                </div>
            }
           
        </form>
    </div>