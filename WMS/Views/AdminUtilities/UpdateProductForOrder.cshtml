

@{
    ViewBag.Title = "Update Product For Order";
}

<h2><span>Update Product For Order</span></h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal col-md-12">
        @Html.ValidationSummary(true)

        <div class="input-group h-100 justify-content-center align-items-center">
            @Html.Label("Order Number", new { @class = "col-md-4" })
            <div class="col-md-8">
                @Html.Editor("OrderNumber")
            </div>
        </div>

        <div class="input-group h-100 justify-content-center align-items-center">
            @Html.Label("Product Sku Code (You want to change)", new { @class = "col-md-4" })
            <div class="col-md-8">
                @Html.Editor("opsku")
            </div>
        </div>

        <div class="input-group h-100 justify-content-center align-items-center">
            @Html.Label("Product Sku Code (You want to add) ", new { @class = "col-md-4" })
            <div class="col-md-8">
                @Html.Editor("npsku")
            </div>
        </div>


       
    </div>

    <div class="input-group h-100 justify-content-center align-items-center">
        <div class="col-md-offset-2 col-md-10 bottom-right">
            <input type="submit" value="Create" class="btn btn-primary" />
            <div class="back-list">@Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default" })</div>  
        </div>
    </div>
}
