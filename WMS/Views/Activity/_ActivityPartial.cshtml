@model PagedList.IPagedList<Ganedata.Core.Entities.Domain.AuthActivity>

<div class="row">
    <table class="table table-hover table-bordered tsort">

        <thead>
            <tr>

                <th>
                    @Html.Label("Select")

                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().ActivityName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().ActivityController)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().ActivityAction)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().IsActive)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>

                        <input type="radio" name="ProductId" class="selkey" value="@item.ActivityId">
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ActivityName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ActivityController)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ActivityAction)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsActive)
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>

<div class="row  prow" data-wms-url="@Url.Action("SearchActivity")">

    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }), new PagedListRenderOptions() { Display = PagedListDisplayMode.IfNeeded, DisplayPageCountAndCurrentLocation = true })

</div>
