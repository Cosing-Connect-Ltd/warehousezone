@model Ganedata.Core.Entities.Domain.AuthUser
@{Layout = null;}


@using (Html.BeginForm("LoginUser", "User", FormMethod.Post, new { @class = "loginForm", id = "" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    @Html.Hidden("Placecheck", ViewBag.PlaceOrders == null ? "" : "placeorder")
    <div class="form-group">
        <input id="UserName" type="text" value="" name="UserName" required autocomplete="off" class="form-control" placeholder="Enter UserName">
        @Html.ValidationMessageFor(model => model.UserName)
    </div>
    <div class="form-group">
        @Html.PasswordFor(model => model.UserPassword, new { required = "required", @class = "form-control", @placeholder = "Enter your password" })
        @Html.ValidationMessageFor(model => model.UserPassword)
    </div>
    <button type="button" class="btn btn-primary loginBtn" onclick="LoggedIn()">
        Login
    </button>
    <div class="rememberWrap">
        <div class="form-check">
            <input type="checkbox"
                   class="form-check-input"
                   id="rememberme" />
            <label class="form-check-label" for="rememberme">  remember me</label>
        </div>
        <span class="losturpwd">
            Forget your password?
        </span>
    </div>
}

