@model Ganedata.Core.Entities.Domain.AuthUser
@{Layout = null;}



@using (Html.BeginForm("LoginUser", "User", FormMethod.Post, new { @class = "loginForm", id = "" }))
{

    <h5 class="alert-message-login" style="color:red"></h5><br />
    <div class="form-group">

        @Html.EditorFor(model => model.UserName, new { htmlattributes = new { @class = "form-control", @placeholder = "Enter user name" } })
        @Html.ValidationMessageFor(model => model.UserName)
    </div>
    <div class="form-group">
        
        @Html.PasswordFor(model => model.UserPassword, new {@class = "form-control", @placeholder = "Enter your password" , onkeyup="OnEnter(event);"})
      
    </div>
    <button type="button" class="btn btn-primary loginBtn" onclick="LoggedIn()">
        Login
    </button>
    <div class="rememberWrap">
        <div class="form-check">
            <input type="checkbox"
                   class="form-check-input"
                   id="rememberme" />
            <label class="form-check-label" for="rememberme">  remember me</label>
        </div>
        <span class="losturpwd">
            <a href="@Url.Action("ForgotPassword","User")">Forget your password?</a>
        </span>
    </div>
}

