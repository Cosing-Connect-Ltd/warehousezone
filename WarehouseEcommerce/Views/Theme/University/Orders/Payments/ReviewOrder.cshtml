@using Ganedata.Core.Entities.Enums
@model Ganedata.Core.Entities.Domain.ReviewOrderViewModel
@{
    ViewBag.Title = "Review Order";
}

<section class="nb_sec nb_prdlisting_pgsec nb_sec_pb">
    <div class="container">
        <div class="breadCrumbtopsec checkout-process-breadcrum">
            <div class="nb_bread_crumbwrap">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li>></li>
                        <li class="breadcrumb-item">
                            <a href="#">Basket</a>
                        </li>
                    </ol>
                </nav>
            </div>
        </div>
        @if (Model.CartItems != null && Model.CartItems.Any())
        {
            <div class="nb_sec checkconfirmSec">
                @Html.Partial("Payments/_OrderProgressBar", OrderProgressStep.ReviewItems)

                <div class="mb-4 col-12">
                    <div class="row">
                        <div class="col botomBtnsec justify-content-start"><a class="btmbtn sho" href="@Url.Action("List", "Products")">CONTINUE SHOPPING</a></div>
                        <div class="col text-center"><h5 class="font-weight-bold">REVIEW ORDER</h5></div>
                        <div class="col text-right botomBtnsec justify-content-end"><button type="Submit" class="btmbtn pro">PROCEED TO PAYMENT</button></div>
                    </div>
                </div>

                <div class="bg-light p-3">
                    <div class="row">
                        <div class="col">
                            <h6 class="mb-2">Delivery Address <a href="#" class="text-pink small">Change</a></h6>
                            <p>
                                position: relative so that any children or
                                pseudo elements can be positioned relative to itself.
                                Set position:  The double colon replaced
                                the single-colon notation for pseudo-elements in CSS3. This
                            </p>
                            <a href="#" class="text-pink small">Add Delivery instruction</a>
                        </div>
                        <div class="col">
                            <h6 class="mb-2">Billing Address <a href="#" class="text-pink small">Change</a></h6>
                            <p>
                                position: relative so that any children or
                                pseudo elements can be positioned relative to itself.
                                Set position:  The double colon replaced
                                the single-colon notation for pseudo-elements in CSS3. This
                            </p>
                        </div>
                        <div class="col">
                            <h6 class="mb-2">Delivery Options</h6>
                            <div class="mb-3">
                                <div class="d-flex align-items-center">
                                    <input type="radio" name="DeliveryOpt" id="DeliveryOpt1" /> <label for="DeliveryOpt1">Next Day Delivery &pound;<span>10</span></label>
                                </div>
                                <div class="d-flex align-items-center">
                                    <input type="radio" name="DeliveryOpt" id="DeliveryOpt2" /> <label for="DeliveryOpt2">Standard Delivery &pound;<span>10</span> (2 to 5 working days)</label>
                                </div>
                            </div>
                            <div class="d-flex">
                                <div class="mr-4">
                                    <h6>Total Cost</h6>
                                    <div>(Including delivery charges)</div>
                                </div>

                                <h5 class="text-pink">&pound;244.57</h5>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="clearfix"></div>
        }

        <div class="mt-4" id="updateCart">
            @Html.Partial("Payments/_CartItems", Model)
        </div>

        @if (Model.RelatedProducts != null && Model.RelatedProducts.Any())
        {
            <div class="mt-10">
                <h5 class="text-center font-weight-bold">RELATED PRODUCTS</h5>
                @Html.Partial("~/Views/Theme/University/Products/_RelatedProducts.cshtml", Model.RelatedProducts)
            </div>
        }
    </div>
</section>


