  <!-- banner section  -->
@model List<Ganedata.Core.Entities.Domain.WebsiteSlider>
<section class="nb_sec nb_bannersec">
    <div id="NorthumbriaCarousle"
         class="carousel slide nb_hm_bnr_carrousle carousel-fade"
         data-ride="carousel">
        <div class="carousel-inner">
            @{int i = 0;}
            @foreach (var item in Model)
            {
                if (i == 0)
                {
                    <div class="carousel-item active">
                        <img class="d-block w-100"
                             src="@ViewBag.BaseFilePath@item.Image"
                             alt=" @item.ImageAltTag" />
                        <div class="np_bannerContentOuter">
                            <div class="nb_bannerCaptionWrap">
                                <h5 style="color:@(!string.IsNullOrEmpty(item.TextColor) ? @item.TextColor : string.Empty); background-color:@(!string.IsNullOrEmpty(item.ForeColor) ? @item.ForeColor : string.Empty)">@item.Text</h5>
                                <a style="color:@(!string.IsNullOrEmpty(item.TextColor) ? @item.TextColor : string.Empty); background-color:@(!string.IsNullOrEmpty(item.ForeColor) ? @item.ForeColor : string.Empty)" href="@item.ButtonLinkUrl">@item.ButtonText</a>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <div class="carousel-item">
                        <img class="d-block w-100"
                             src="@ViewBag.BaseFilePath@item.Image"
                             alt=" @item.ImageAltTag" />
                        <div class="np_bannerContentOuter">
                            <div class="nb_bannerCaptionWrap">
                                <h5 style="color:@(!string.IsNullOrEmpty(item.TextColor) ? @item.TextColor : string.Empty); background-color:@(!string.IsNullOrEmpty(item.ForeColor) ? @item.ForeColor : string.Empty)">
                                    @item.Text
                                </h5>
                                <a style="color:@(!string.IsNullOrEmpty(item.TextColor) ? @item.TextColor : string.Empty); background-color:@(!string.IsNullOrEmpty(item.ForeColor) ? @item.ForeColor : string.Empty)" href="@item.ButtonLinkUrl">@item.ButtonText</a>
                            </div>
                        </div>
                    </div>

                }
                i++;
            }
            <div class="np_bannerContentOuter CountWrap">
                <a href="#NorthumbriaCarousle"
                   role="button"
                   data-slide="prev"
                   class="nb_bnr_count lft">
                    <i class="fa fa-angle-left fa-2x"></i>
                </a>
                <a href="#NorthumbriaCarousle"
                   role="button"
                   data-slide="next"
                   class="nb_bnr_count rgt">
                    <i class="fa fa-angle-right fa-2x"></i>
                </a>
            </div>
        </div>
    </div>
</section>
<!-- banner section  -->
