@model Ganedata.Core.Entities.Domain.WebsiteLayoutSettings

@if (Model.ShowSubscriptionPanel)
{
    <section class="nb_sec nb_sub_sec">
        <div class="container">
            <div class="nb_sub_wrap">
                <span class="left_beer">
                    <img src="@(ViewBag.BaseFilePath + Model.SubscriptionPanelImageUrl)" />
                </span>
                <div class="sub_form_wrap">
                    <div class="sub_form_wrap_inner">
                        <h5 class="sf_hd">@Model.SubscriptionPanelTitle</h5>
                        <p class="sf_des">
                            @Model.SubscriptionPanelDescription
                        </p>
                        <form action="@Model.SubscriptionHandlerUrl" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate nb_home_sub_form" target="_blank" novalidate>
                            <div class="sf_input_wrap mc-field-group">
                                <input type="email" name="EMAIL" class="required email" id="mce-EMAIL" placeholder="Enter your mail Id" />
                                <button type="submit" value="Subscribe" name="subscribe" id="mc-embedded-subscribe" class="button">
                                    <i class="ico icon-right-arrow"></i>
                                </button>
                            </div>
                            <div id="mce-responses" class="clear">
                                <div class="response" id="mce-error-response" style="display: block "></div>
                                <div class="response" id="mce-success-response" style="display:block"></div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <script type='text/javascript' src='//s3.amazonaws.com/downloads.mailchimp.com/js/mc-validate.js'></script>
    <script type='text/javascript'>(function ($) { window.fnames = new Array(); window.ftypes = new Array(); fnames[0] = 'EMAIL'; ftypes[0] = 'email'; fnames[1] = 'FNAME'; ftypes[1] = 'text'; fnames[2] = 'LNAME'; ftypes[2] = 'text'; fnames[3] = 'ADDRESS'; ftypes[3] = 'address'; fnames[4] = 'PHONE'; ftypes[4] = 'phone'; }(jQuery)); var $mcj = jQuery.noConflict(true);</script>
}