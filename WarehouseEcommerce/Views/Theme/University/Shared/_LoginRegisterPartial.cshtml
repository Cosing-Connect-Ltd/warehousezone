<div class="modal fade" id="signupPopup">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <input id="Placecheck" type="hidden" />
            <button type="button"
                    class="close"
                    data-dismiss="modal"
                    aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            <h5 class="success-message-reg text-success"></h5>
            <div class="login_form_sec show">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Login</h5>
                </div>
                <div class="modal-body">
                    <div class="login-model-body">
                        @Html.Action("Login", "User")
                    </div>
                    <div class="registrationSec">
                        <h3 class="head">Registration</h3>
                        <p>
                            Registering for this site allows you to access your order
                            status and history. Just fill in the fields below, and we’ll
                            get a new account set up for you in no time. We will only ask
                            you for information necessary to make the purchase process
                            faster and easier.
                        </p>
                        <button id="showRegForm" class="regBtn">REGISTER</button>
                    </div>
                </div>
            </div>
            <div class="registration_form_sec">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Register</h5>
                </div>
                <div class="modal-body">
                    <div class="register-model-body">
                        @Html.Action("Create", "User")
                    </div>
                    <div class="registrationSec">
                        <p>
                            Your personal data will be used to support your experience
                            throughout this website, to manage access to your account, and
                            for other purposes described in our privacy policy
                        </p>
                        <button class="regBtn" onclick="CreateUsers();">REGISTER</button>
                    </div>
                    <div class="ahav_acc">
                        Already have an account <span id="showLoginForm">Login</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade basket-modal" id="modalNotificationEmail" role="dialog">
    <div class="modal-dialog modal-lg">        
        <div class="modal-content basket-modal-content">
            <div class="modal-body pl-3 pr-3">
                <button type="button" class="close mt-3" data-dismiss="modal">&times;</button>
                <h5 class="header-ul-left-pink mb-4 p-3 clearfix">Product Notification</h5>                
                <form autocomplete="off" class="col-12">
                    <div class="form-group">
                        <label class="text-muted mb-1">Enter your email.</label>
                        <input type="email" required class="form-control form-control-lg no-asterisk" placeholder="username@address.com" id="EmailId" name="EmailId" />
                    </div>
                    <div class="botomBtnsec modal-footer">
                        <button class="btmbtn pro btn-block fw-500" type="button" id="btnNotifyProd">SUBMIT</button>
                    </div>
                </form>                
            </div>
        </div>
    </div>
</div>
