@model List<Ganedata.Core.Entities.Domain.WebsiteSlider>

<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        @foreach (var item in Model)
        {
            if (!string.IsNullOrEmpty(item.Image))
            {
                <div class="carousel-item active">
                    <img src="@ViewBag.BaseFilePath@item.Image" alt="@item.ImageAltTag" class="d-block w-100 img-fluid">
                    @*<img src="~/Content/Theme/Smart/app/img/slider/SliderImage.png" alt="static image" class="d-block w-100 img-fluid">*@
                </div>
            }

        }
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>