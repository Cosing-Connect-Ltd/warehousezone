@model  Ganedata.Core.Models.ResetPasswordViewModel
 
<!-- BEGIN login -->
<div class="login">
    <!-- BEGIN login-content -->
    <div class="login-content">        
        <div class="h2 text-center">Set your account password.</div>
        
        @if (ViewData["UserError"] != null)
        {
            <div class="alert alert-danger">
                @ViewData["UserError"]
            </div>
        }
        else
        {
            if (ViewBag.ErrorMessage!=null)
            {
                <div class="alert alert-danger">
                    @ViewBag.ErrorMessage
                </div>
            }

            <form action="@Url.Action("ResetPassword", "User")" method="POST" name="confirmpwd_form" autocomplete="off" role="form" class="bg-angle">

                @Html.AntiForgeryToken()
                @Html.HiddenFor(m=> m.ReturnToken)
                <input asp-for="Code" type="hidden"/>

                <div class="form-group">
                    <label asp-for="Email">Email Address <span class="text-danger">*</span></label>
                    @Html.TextBoxFor(m=> m.Email, new { @class = "form-control form-control-lg fs-15px", placeholder = "username@address.com" })
                    @Html.ValidationMessageFor(m=>m.Email)
                    <span asp-validation-for="Email" class="badge-danger badge"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password">Password <span class="text-danger">*</span></label>
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control form-control-lg" })
                    @Html.ValidationMessageFor(m => m.Password)
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmPassword">Confirm Password <span class="text-danger">*</span></label>
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control form-control-lg" })
                    @Html.ValidationMessageFor(m => m.ConfirmPassword)
                </div>
                <button type="submit" class="btn btn-primary btn-lg btn-block fw-500 mb-3 mt-5">Confirm</button>



            </form>
        }
        </div>
    <!-- END login-content -->
</div>
<!-- END login -->
 