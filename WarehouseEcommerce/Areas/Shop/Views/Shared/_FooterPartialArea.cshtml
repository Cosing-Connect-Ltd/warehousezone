@model List<Ganedata.Core.Entities.Domain.ProductManufacturer>

<footer>
    <div>
        <div class="custom-max-width m-auto logo-slider">
            @foreach (var item in Model)
            {

                <a href="@Url.Action("list","Products",new { manufacturerName=item.Name})"><img src="@(!string.IsNullOrEmpty(item.ImagePath)? ViewBag.BaseFilePath + item.ImagePath : ViewBag.BaseFilePath + "/UploadedFiles/Products/no_image.gif")" alt="@item.Name" title="@item.Name" class="img-responsive"> </a>

            }

        </div>
        <hr class="footer-hr">
    </div>
    <div class="container custom-max-width m-auto">
        <div class="row">
            <div class="middle-footer">
                <aside id="column-left1" class="col-sm-4 col-xs-12 follow-us-footer">
                    <div>
                        <h5 class="hidden-sm hidden-lg hidden-md">
                            <span>About Us</span>
                            <button type="button" class="btn btn-primary toggle collapsed" data-toggle="collapse" data-target="#about"></button>
                        </h5>
                        <div id="about" class="collapse footer-collapse footabout">
                            <a href="/Shop"><img src="/Areas/Shop/Content/app/img/logo.png" class="img-responsive" alt=""></a>
                            <h5 id="follow-us" class="text-capitalize">Follow Us</h5>
                            <ul class="list-unstyled list-inline social">
                                @Html.Action("_SocialMediaAccountsPartial", "Default")
                            </ul>
                        </div>
                    </div>
                </aside>
                <div class="col-sm-5 col-xs-12">
                    <div class="row">
                        <div class="col-sm-6 col-xs-12 fborder">
                            <h5>
                                Information
                                <button type="button" class="btn btn-primary toggle collapsed" data-toggle="collapse" data-target="#info"></button>
                            </h5>
                            <div id="info" class="collapse footer-collapse">
                                <ul class="list-unstyled">
                                    <li><a href="/about-us">About Us</a></li>
                                    <li><a href="/privacy-policy">Privacy Policy</a></li>
                                    <li><a href="/privacy-policy">Terms &amp; Conditions</a></li>
                                    <li><a href="/get-started">Contact Us</a></li>
                                </ul>
                            </div>
                        </div>
                        <div class="col-sm-6 col-xs-12 fborder">
                            <h5>
                                My Account
                                <button type="button" class="btn btn-primary toggle collapsed" data-toggle="collapse" data-target="#account"></button>
                            </h5>
                            <div id="account" class="collapse footer-collapse">
                                <ul class="list-unstyled lastb">
                                    <li><a href="@Url.Action("Account","User")">My Account</a></li>
                                    <li><a href="@Url.Action("OrderHistory","User")">Order History</a></li>
                                    <li><a href="@Url.Action("WishList","User")">Wish List</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                <aside id="column-right1" class="col-sm-3 col-xs-12 fborder">
                    <div>
                        <h5>
                            <span>Contact us</span>
                            <button type="button" class="btn btn-primary toggle collapsed" data-toggle="collapse" data-target="#contact"></button>
                        </h5>
                        <div id="contact" class="collapse footer-collapse footcontact ">
                            <ul class="list-unstyled f-left">
                                <li><a href="https://goo.gl/maps/iXCZicifeHYpBN7LA"><img class="mt-7" src="/Areas/Shop/Content/app/img/icons/location.png" alt=""><span>Airedale House, Clayton Wood Rise Leeds LS16 6RF, UK</span></a></li>
                                <li><img src="/Areas/Shop/Content/app/img/icons/email.png" alt=""><span>info@ganedata.co.uk</span></li>
                                <li><img src="/Areas/Shop/Content/app/img/icons/phone.png" alt=""><span>+44 (0) 333 323 0202</span></li>
                            </ul>
                            <br />
                            <h5 class="text-capitalize">Payment</h5>
                            <ul class="list-inline list-unstyled foot-payment">
                                <li><a href="#"><i class="fa fa-cc-mastercard"></i></a></li>
                                <li><a href="#"><i class="fa fa-cc-visa"></i></a></li>
                                <li><a href="#"><i class="fa fa-credit-card"></i></a></li>
                                <li><a href="#"><i class="fa fa-cc-paypal"></i></a></li>
                            </ul>
                        </div>
                    </div>
                </aside>
            </div>
        </div>
    </div>
    <div class="ui-footer text-center">
        <div class="container">
            <div class="ccopy">© All rights reserved - <a href="/">Gane DataScan Limited</a> - 2020</div>
        </div>
    </div>
</footer>
<a href="" id="scroll" title="Scroll to Top">
    <span id="slidetop"></span>
</a>
